section.nav-line
	background #479eaf
	.wrap
		nav
			ul
				display block
				margin 0
				padding 0
				clearfix()
				li
					display block
					list-style-type none
					transition 0.2s
					float left
					position relative
					&:first-child
						&:before
							display block
							content ""
							position absolute
							top 15px
							left 0
							width 1px
							height 29px
							background rgba(255, 255, 255, 0.34)
					&:after
						display block
						content ""
						position absolute
						top 15px
						right -1px
						width 1px
						height 29px
						background rgba(255, 255, 255, 0.34)
					&.active,
					&:hover
						background #ffef2b
						a
							color #000
						&:before,
						&:after
							display none
					a
						font-size 18px
						color #f7f7f7
						font-weight 700
						padding 16px 49px
						display block
						transition 0.2s
						&:hover
							color #000
